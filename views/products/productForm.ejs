<%- layout('./layout/template') %>
<link rel="stylesheet" type="text/css" href="/css/product.css">
<div class="create-product">
    <h1 class="heading"><span>Thêm sản phẩm</span></h1>
    <form method="post" action="/api/product" enctype="multipart/form-data" id ="createForm">
        <div class="inputBox">
            <label for="name">Tên sản phẩm</label>
            <input type="text" id="name" name="name" placeholder="name"> <br>
            <label for="price">Giá sản phẩm</label>
            <input type="number" id="price" name="price" placeholder="price"> <br>
            <label for="description">Mô tả sản phẩm</label>
            <textarea id="description" name="description" cols="80" rows="4" placeholder="Mô tả sản phẩm" form="createForm"></textarea>
            <label for="images">Hình ảnh sản phẩm</label>
            <input type="file" name="images" placeholder="images" multiple><br>
            <label for="category">Phân loại sản phẩm</label>
            <select id="category" name="category" >
                <% for (let category of categories) { %>
                    <option name="category" value="<%= category.id %>"><%= category.name %> </option>
                <% } %>  
            </select>
            <input type="submit" value="submit" class="btn">
        </div>
    </form>
</div>
